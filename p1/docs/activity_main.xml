<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/MacMiller"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnLofi"
        app:srcCompat="@drawable/mac"
        android:layout_width="217dp"
        android:layout_height="138dp"
        android:layout_gravity="center"
        android:padding="3dp"
        android:cropToPadding="true"
        android:scaleType="centerCrop"
        android:background="@drawable/image_border"
        />

    <Button
        android:id="@+id/btnMac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/btnMac"
        android:theme="@style/btnColor"
        app:backgroundTint="#4E2E54"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MacMiller"
        />

    <ImageView
        android:id="@+id/Rush"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rush"
        android:layout_width="217dp"
        android:layout_height="138dp"
        android:layout_gravity="center"
        android:padding="3dp"
        android:cropToPadding="true"
        android:scaleType="centerCrop"
        android:background="@drawable/image_border"
        />

    <Button
        android:id="@+id/btnRush"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnRush"
        android:layout_marginTop="15dp"
        android:theme="@style/btnColor"
        app:backgroundTint="#4E2E54"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Rush"/>

    <ImageView
        android:id="@+id/lofi"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnRush"
        app:srcCompat="@drawable/lofi"
        android:layout_width="217dp"
        android:layout_height="138dp"
        android:layout_gravity="center"
        android:padding="3dp"
        android:cropToPadding="true"
        android:scaleType="centerCrop"
        android:background="@drawable/image_border"
        />

    <Button
        android:id="@+id/btnLofi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnLofi"
        android:layout_marginTop="15dp"
        android:theme="@style/btnColor"
        app:backgroundTint="#4E2E54"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lofi"/>

</androidx.constraintlayout.widget.ConstraintLayout>